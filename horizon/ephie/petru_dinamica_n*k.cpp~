#include <fstream>
#define DN 1005
using namespace std;

int n,k,p[DN],c[DN],f[DN][DN],sol;

int main() {
    ifstream fi("ephie.in");
    ofstream g("ephie.out");
    fi>>n>>k;
    for(int i=1; i<=n; ++i) fi>>p[i]>>c[i];
    for(int i=1; i<=n; ++i) {
        f[i][0]=f[i-1][0]-c[i];
        for(int j=1; j<=k; ++j)
            f[i][j]=max(f[i-1][j-1]+p[i],f[i-1][j]-c[i]);
    }
    for(int s=k; s<=n; ++s) sol=max(sol,f[s][k]);
    g<<sol;
}
